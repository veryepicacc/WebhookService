--[[
	Refer to the WebhookInformation ModuleScript for more info on customization for messages.
--]]

local ServerScriptService = game:GetService("ServerScriptService")
local WebhookService = require(ServerScriptService:WaitForChild("WebhookService"))

local EmbedData = {
	["content"] = "",
	["embeds"] = {{
		["title"] = "Title Here",
		["description"] = "Text Here",
		["type"] = "rich",
		["color"] = tonumber(0xFF0000),
		["footer"] = {
			icon_url = "https://saferschoolsni.co.uk/wp-content/uploads/2021/09/Roblox_Icon.png",
			text = "From @Anyone | " .. DateTime.now():FormatLocalTime("LL", "en-us") .. " at " .. DateTime.now():FormatLocalTime("LT", "en-us")
		},
		["thumbnail"] = {
			url = "https://saferschoolsni.co.uk/wp-content/uploads/2021/09/Roblox_Icon.png"
		},
	}}
}

WebhookService:Setup("https://discord.com/api/webhooks/Webhook")
WebhookService:PostWebhookFunc("Greetings!", "Text", nil) --Text
WebhookService:PostWebhookFunc(nil, "Embed", EmbedData) --Embedding
